<div class="header"
style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
url('https://res.cloudinary.com/dmcatvo8d/image/upload/v1692355167/xo5yma4rmwzr8r7g5w39.jpg')">
<h1>Save any kind of movies</h1>
</div>

<h2>My lists</h2>
  <% @lists.each do |list| %>
    <div class="card" style="width: 18rem; height: 56px;">
    <% if list.photo.attached? %>
      <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %></li>
        </div>
        <% else %>
          <%= link_to list.name, list_path(list) %></li>
      <% end %>
    </div>
  <% end %>

<%= link_to "new list", new_list_path %>
