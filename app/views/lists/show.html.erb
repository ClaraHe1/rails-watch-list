<h1><%= @list.name %></h1>

<%= link_to "add a movie", new_list_bookmark_path(@list) %>

<ul>
  <% @list.movies.each do |movie| %>
    <h3><%= "#{movie.title} ~  #{movie.rating}" %></h3>
    <p><%= movie.overview %></p>
    <% movie.bookmarks.each do |bookmark| %>
    <p><%= bookmark.comment %></p>
    <p><%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }%></p>
    <% end %>
  <% end %>
</ul>
